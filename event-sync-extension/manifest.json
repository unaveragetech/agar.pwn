{
  "manifest_version": 3,
  "name": "Cross-Tab Event Sync",
  "description": "Synchronize mouse and keyboard events across tabs with the same origin.",
  "version": "1.0",
  "permissions": ["tabs", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://yourwebsite.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://yourwebsite.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",  // Optional if you want a UI
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
